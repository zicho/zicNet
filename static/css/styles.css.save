/* STANDARDS */

body {
  max-width: 960px;
  margin: auto;
  margin-bottom: 10px;
}

a, p, span:not(.znet-banner) {
  font-family: 'Lato', sans-serif;
}

hr {
  border: 0;
  height: 1px;
  background-image: -webkit-linear-gradient(left, #f0f0f0, #8c8b8b, #f0f0f0);
  background-image: -moz-linear-gradient(left, #f0f0f0, #8c8b8b, #f0f0f0);
  background-image: -ms-linear-gradient(left, #f0f0f0, #8c8b8b, #f0f0f0);
  background-image: -o-linear-gradient(left, #f0f0f0, #8c8b8b, #f0f0f0);
  margin-top: 0px;
}

select {
  width: 100%;
  background-color: white;
  border: solid 1px;
  border-color: lightgray;
  font-family: 'Lato';
  font-size: 16px;
  padding-right: 16px;
}

h1, h2 {
  margin-bottom: -8px;
}

h1 {
  font-family: 'Roboto Condensed';
}

h2:not(.znet-banner) {
  font-family: 'Roboto Condensed';
  text-transform: uppercase;
  color: darkred;
  font-size: 120%;
}

h3 {
  font-family: 'Roboto Condensed';
  margin-bottom: -4px;
}

ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  widdth: auto;
}

li a {
  display: block;
  color: black;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-family: 'Lato', sans-serif;
  transition: background 0.2s;
}

li a:hover:not(.active) {
  background-color: #f0f0f0;
}

/* CLASSES */

.active {
  background-color: #f0f0f0;
}

.hide {
  display: none;
}
.unhide {
  display: block;
}

.black {
  color: black;
}


.gray {
  color: gray;
}

.red {
  color: darkred;
}

.column {
  width: 48%;
  float: left;
  float: right;
}

.column_left {
  float: left;
}

.znet-banner a { text-decoration: none;
color: black; }

/* IDs */

.mobile_stamp { display: none; }

#logo {
  float: left;
  width: auto;
}

#logo h2 {
  font-family: 'Roboto Condensed';
  margin: 0;
  font-size: 250%;
}

#menu i {
  font-size: 24px;
  vertical-align: middle;
  margin-right: 10px;
  color: gray;
  transition: color 0.2s;
}

#menu a:hover > i {
  color: black;
}

hr { 
  clear: both;
}

#infobar_userinfo {
  float: right;
}

#infostrip span {
  clear: right;
  margin: -4px 0px 4px 0px;
  text-transform: uppercase;
  font-size: 90%;
}

#content {
  margin-top: -12px;
  margin-bottom: 48px;
  clear: both;
}

#container {
  margin: 20px 10px 10px 10px;
}

#entry { margin-bottom: 54px; }

#entry p, #event p {
  margin-left: 8px;
  clear: both;
}

#entry span, a, #event span, a {
  color: gray;
  text-decoration: none;
}

#entry a, #event a {
  margin-left: 8px;
  transition: color 0.2s;
}

#entry a:hover, #event a:hover {
  color: black;
}

#event h3 { margin-bottom: 8px;}

/* MOBILE CSS STUFF */

nav select {
  display: none;
}

@media (max-width: 960px) {
  nav ul {
    display: none;
  }
  nav select {
    display: inline-block;
  }

  #logo {
    float: left;
    width: auto;
  }
  
  #menu {
    float: right;
    margin-left: 12px;
  }

  #menu select {
    width: 200px;
    height: 36px;
    margin-top: 6px;
  }
  
  #event a:first-child, #entry a:first-child {
    margin-top: 8px;
}
  
    #event a:first-child, #entry a:first-child {
    margin-top: 8px;
} 

 .stamp { display: none; }
  
